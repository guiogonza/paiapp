# Dockerfile alternativo usando nginx:latest en lugar de alpine
# Multi-stage build para Flutter Web
# Stage 1: Build
FROM --platform=linux/amd64 ghcr.io/cirruslabs/flutter:stable AS build

WORKDIR /app

# Copiar archivos de configuraci贸n
COPY pubspec.yaml pubspec.lock ./
RUN flutter pub get

# Copiar c贸digo fuente
COPY . .

# Construir la aplicaci贸n web
RUN flutter build web --release

# Stage 2: Production
# Usar nginx:latest en lugar de alpine
FROM --platform=linux/amd64 nginx:latest

# Copiar los archivos compilados
COPY --from=build /app/build/web /usr/share/nginx/html

# Copiar configuraci贸n personalizada de nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exponer el puerto 80
EXPOSE 80

# Comando por defecto de nginx
CMD ["nginx", "-g", "daemon off;"]

